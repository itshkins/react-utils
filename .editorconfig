root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 2
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 150

ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true

ij_continuation_indent_size = 2

ij_use_double_quotes = false
ij_force_quote_style = true

ij_use_semicolon_after_statement = false
ij_force_semicolon_style = true

ij_indent_chained_calls = true
ij_typescript_align_multiline_parameters = false

ij_any_catch_on_new_line = true
ij_any_finally_on_new_line = true
