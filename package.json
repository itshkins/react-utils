    "react-dom": "~17 || ~18"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "8.0.1",
    "jsdom": "22.1.0",
    "rollup": "3.26.2",
    "rollup-plugin-dts": "5.3.0",
    "rollup-plugin-esbuild": "5.0.0",
    "vitest": "0.33.0"
